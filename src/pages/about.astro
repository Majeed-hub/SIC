---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person.jpg";
import beforeAfter from "@images/mission.jpg";
import constructionWorkers from "@images/vis2.jpg";
import aerialView from "@images/vis11.jpg";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/choose.jpg";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Who We Are",
    subTitle:
      "Qatar International Plastic Factory (QIPF) is a leading manufacturer of PET preforms and closures, established in 2017 by Faraj Ali Al-Ajlan Al-Marri. With a vision to become the most reliable and innovative provider in the plastic industry, we specialize in producing high-quality PET preforms for water, juice, and dairy products.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Our Mission",
    subTitle:
      "At QIPF, our mission is to deliver innovative and sustainable plastic solutions that meet the highest standards of quality and reliability. We are committed to continuous improvement and innovation, ensuring that we exceed customer expectations while contributing to the growth of the plastic industry in Qatar and beyond.",
    img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: false,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Our Vision",
    subTitle:
    "To be the worldâ€™s most trusted and innovative manufacturer in the plastic industry, providing cutting-edge solutions that drive customer satisfaction and industry advancement.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of managed construction",
  },

  {
    isRightSection: true,
    title: "Why Choose Us?",
    subTitle:
    "At QIPF, we utilize cutting-edge technology and the latest machinery to ensure top-quality products. Our experienced team brings years of expertise to every project, delivering precision and reliability in every product we create.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In progress building structure",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: false,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `About | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://sicqatar.qa/about",
    "url": "https://sicqatar.qa/about",
    "name": "PET Preforms | Sic-qatar",
    "description": "A solutions and exceptional service in the plastic manufacturing industry.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://sicqatar.qa",
        "name": "Sic-Qatar",
        "description": " SIC Qatar manufactures high quality preforms"
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="About Us"
    subTitle="A solutions and exceptional service in the plastic manufacturing industry. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
 




  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
  title="By the Numbers"
  subTitle="Our commitment to quality and reliability is reflected in our advanced facility and expert team at QIPF. We are dedicated to delivering top-tier products for all your needs."
  mainStatTitle="100%"
  mainStatSubTitle="of our clients rate their experience with QIPF as exceptional"
  stats={[
    {
      stat: "100 million",
      description: "units of PET preforms produced monthly",
    },
    {
      stat: "6",
      description: "production lines equipped with the latest technology",
    },
    {
      stat: "72",
      description: "cavities in American-made Milacron machines",
    },
  ]}
/>

</MainLayout>
