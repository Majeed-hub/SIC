---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person.jpg";
import beforeAfter from "@images/mission.jpg";
import constructionWorkers from "@images/vis2.jpg";
import aerialView from "@images/vis11.jpg";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/choose.jpg";
import underConstruction from "@images/under-construction.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "من نحن",
    subTitle:
      "تعتبر قطر الدولية لصناعة البلاستيك (QIPF) من الشركات الرائدة في تصنيع البريفورم والغطاسات البلاستيكية، وقد تأسست في عام 2017 فرج علي العجلان المري. مع رؤية أن نصبح المزود الأكثر موثوقية وابتكاراً في صناعة البلاستيك، نحن متخصصون في إنتاج بريفورم PET عالية الجودة للمياه والعصائر ومنتجات الألبان. منشأتنا المتطورة، الواقعة في المنطقة الصناعية الجديدة في قطر، تمتد على 16,000 متر مربع ومجهزة بأحدث التكنولوجيا والآلات.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "مخططات وكتيب رقمي مع خطط البناء.",
    imgTwo: personWorking,
    imgTwoAlt: "شخص يعمل في المكتب",
  },
  {
    isRightSection: false,
    title: "مهمتنا",
    subTitle:
      "في QIPF، مهمتنا هي تقديم حلول بلاستيكية مبتكرة ومستدامة تلبي أعلى معايير الجودة والموثوقية. نحن ملتزمون بالتحسين المستمر والابتكار، مما يضمن لنا تجاوز توقعات العملاء مع المساهمة في نمو صناعة البلاستيك في قطر وخارجها.",
    img: beforeAfter,
    imgAlt: "موقع البناء قبل وبعد",
    btnExists: false,
    btnTitle: "اعرف المزيد",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "رؤيتنا",
    subTitle:
      "أن نكون الشركة الأكثر موثوقية وابتكاراً في صناعة البلاستيك في العالم، مقدمة حلولاً متطورة تعزز رضا العملاء وتساهم في تقدم الصناعة.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "عمال البناء يديرون مشروعاً",
    imgTwo: aerialView,
    imgTwoAlt: "عرض جوي لموقع بناء تحت الإدارة",
  },
  {
    isRightSection: true,
    title: "لماذا تختارنا؟",
    subTitle:
      "في SIC-qipf، نحن نستخدم أحدث التكنولوجيا والآلات لضمان منتجات عالية الجودة. فريقنا ذو الخبرة يقدم سنوات من الخبرة في كل مشروع، مما يوفر الدقة والموثوقية في كل منتج نصنعه.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "هيكل بناء تحت الإنشاء",
    imgTwo: underConstruction,
    imgTwoAlt: "مبنى بني ورمادي قيد الإنشاء",
    btnExists: false,
    btnTitle: "اقرأ المزيد",
    btnURL: "#",
  },
]
;
---

<MainLayout
  title="About | SIC-Qatar"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://sicqatar.qa/fr/services",
    url: "https://sicqatar.qa/fr/services",
    name: "Services de Consultation d'Experts | ScrewFast",
    description:
      "Unissant l'expertise à votre vision, ScrewFast fournit un service exceptionnel et des solutions complètes dans le secteur du matériel et de la construction, de la consultation à l'achèvement du projet.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://sicqatar.qa/fr",
      name: "ScrewFast",
      description:
        "ScrewFast propose des outils matériels de premier ordre et des services de construction experts pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "fr",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
  title="معلومات عنا"
  subTitle="نحن نقدم حلولًا وخدمات استثنائية في صناعة تصنيع البلاستيك. فريقنا ذو الخبرة ملتزم بدعم مشروعك من البداية حتى الانتهاء مع مجموعة من الخدمات المتخصصة."
  btnExists={true}
  btnTitle="حدد استشارة"
  btnURL="#"
/>

  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
  title="بالأرقام"
  subTitle="إلتزامنا بالجودة والموثوقية ينعكس في منشأتنا المتطورة وفريقنا الخبير في SIC-QIPF. نحن ملتزمون بتقديم منتجات عالية الجودة لتلبية جميع احتياجاتكم."
  mainStatTitle="100%"
  mainStatSubTitle="من عملائنا يقيمون تجربتهم مع SIC-QIPF بأنها استثنائية"
  stats={[
    {
      stat: "100 مليون",
      description: "وحدة من قوالب PET المنتجة شهرياً",
    },
    {
      stat: "6",
      description: "خطوط إنتاج مجهزة بأحدث التقنيات",
    },
    {
      stat: "72",
      description: "كافتي في ماكينات Milacron الأمريكية الصنع",
    },
  ]}
/>
</MainLayout>
