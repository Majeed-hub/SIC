---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/Untitled design.png";
import faqs from "@data/fr/faqs.json";
import features from "@data/fr/features.json";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>

  <HeroSection
    title=`الرائدة في قطر في تصنيع <span
        class="text-maroon-700 dark:text-maroon-700">قوالب البولي إيثيلين تيريفثالات (PET)</span>`
    subTitle="تميز مبتكر في حلول البلاستيك لتعبئة المياه والعصائر ومنتجات الألبان."
    primaryBtn="ابدأ الاستكشاف"
    primaryBtnURL="/products"
    secondaryBtn="اتصل بنا"
    secondaryBtnURL="/contact"
    src={heroImage}
    alt="منتجات قوالب تعبئة المياه"
  />

  <ClientsSection
    title="موثوق به من قبل قادة الصناعة"
    subTitle="جرب الموثوقية التي اختارها عمالقة الصناعة."
    partners={partnersData}
  />

  <FeaturesGeneral
  title="التميز في تصنيع قوالب البولي إيثيلين تيريفثالات (PET)"
  subTitle="في مصنع قطر الدولي للبلاستيك، نختص في إنتاج قوالب PET عالية الجودة لتعبئة المياه والعصائر ومنتجات الألبان."
  features={features} 
/>


<FeaturesNavs
  title={`قم بتخصيص عروض <span class="text-yellow-500 dark:text-yellow-400">مصنع قطر الدولي للبلاستيك</span> لتلائم احتياجات التعبئة الخاصة بك.`}
  tabs={[
    {
      heading: "قوالب PET ذات التقنية المتطورة",
      content:
        "نختص في إنتاج قوالب PET عالية الجودة للمياه والعصائر ومنتجات الألبان، باستخدام آلات Milacron المتطورة.",
      svg: "tools",
      src: tools,
      alt: "قوالب PET على خط الإنتاج",
      first: true,
    },
    {
      heading: "حلول مخصصة للتعبئة الساخنة والباردة",
      content:
        "قوالب PET الخاصة بنا مصممة لتلائم التعبئة الساخنة (حتى 80°C) والباردة، وفقًا لأعلى المعايير الصناعية.",
      svg: "dashboard",
      src: dashboard,
      alt: "قوالب PET مخصصة للتعبئة الساخنة والباردة",
      second: true,
    },
    {
      heading: "ضمان الجودة والابتكار",
      content:
        "نضمن أعلى معايير الجودة باستخدام أدوات متطورة، مع الابتكار المستمر في منتجات القوالب الجديدة.",
      svg: "house",
      src: construction,
      alt: "أدوات ضمان الجودة في المصنع",
    },
  ]}
/>

  <TestimonialsSection
    title="سرّع إنتاجك"
    subTitle="في مصنع قطر الدولي للبلاستيك، نضمن بدءًا سريعًا مع إعداد فوري للإنتاج. جرب سرعة التصنيع التي أعيد تعريفها."
    testimonials={[
      {
        content:
        "مصنع قطر الدولي للبلاستيك عزز بشكل كبير كفاءة إنتاجنا. كان الإعداد فوريًا، وأوقات الاستجابة السريعة مذهلة. حقًا محور تغيير في صناعة البلاستيك!",
        author: "سامانثا رويز",
        role: "مديرة العمليات | شركة ConstructIt",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "80M+",
        description:
          "قوالب تُنتج شهريًا — من الإنتاج الصغير إلى الكبير",
      },
      {
        count: "18k+",
        description:
          "طن من المنتجات النهائية سنويًا",
      },
      {
        count: "6",
        description:
          "خطوط إنتاج بتقنية دولية حديثة",
      },
      {
        count: "2x",
        description: "إنتاج أسرع باستخدام حلول بلاستيكية مبتكرة",
      },
    ]}
  />

  <!-- <PricingSection pricing={pricing} /> -->

  <FAQ title="الأسئلة<br />الشائعة" faqs={faqs} />

 <HeroSectionAlt
  title="لنبتكر معًا"
  subTitle="شريكك الموثوق في إنتاج قوالب PET عالية الجودة لتعبئة المياه والعصائر ومنتجات الألبان."
  />
</MainLayout>